{% extends 'admin/admin_base.html.twig' %}

{% block metaTitle %}
<h2>Liste des catégories</h2>
{% endblock metaTitle %}
{% block header %}
<h2>Voici la liste des catégories :</h2>
{% endblock header %}
{% block main %}
        {% for category in category %}
        {% if category.published %}

            <article class="article">
                <h2>{{ category.title | upper }}</h2>
                <p>{{ category.content }}</p>
                <div class="Supprimer">
                    <a href="{{ path('admin_category_delete', {'id' : category.id} ) }}">Supprimer</a>
                </div>
                <div class="Modifier">
                    <a href="{{ path('AdminArticleUpdateContent', {'id' : category.id} ) }}">Modifier</a>
                </div>

            </article>

        {% endif %}
        {% endfor %}


{% endblock main %}
{% block footer %}
<p>Copiright</p>
{% endblock footer %}

