{% extends 'admin/admin_base.html.twig' %}

{% block metaTitle %}
    <h2>Liste des objets</h2>
{% endblock metaTitle %}

{% block header %}
    <h2>Ceci est le titre</h2>
{% endblock header %}

{% block main %}
<div class="articles-container">
    {{ category.title }}

    {% for article in category.articles %}
        <p>{{ article.title }}</p>
        <article class="article">
            <h2>{{ category.title | upper }}</h2>
            <p>{{ category.content }}</p>
            <div class="Supprimer">
                <a href="{{ path('admin_category_delete', {'id' : category.id} ) }}">Supprimer</a>
            </div>
            <div class="Modifier">
                <a href="{{ path('AdminArticleUpdateContent', {'id' : category.id} ) }}">Modifier</a>
            </div>

        </article>
    {% endfor %}

</div>
{% endblock main %}

{% block footer %}
    <p>Ceci est le bas de page</p>
{% endblock footer %}
